<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="300dp"
    android:layout_centerInParent="true"
    android:clipToPadding="false"
    android:padding="10dp"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:padding="10dp"
        android:layout_width="match_parent">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            android:id="@+id/disaster_card"
            android:layout_gravity="center"
            card_view:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="2dp"
            android:clickable="true"
            card_view:cardBackgroundColor="#77a842">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/disaster_card_layout"
                android:clickable="true"
                android:background="?selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@raw/earthquake"
                    android:layout_centerInParent="true"
                    android:id="@+id/card_disaster_type_image" />

                <TextView
                    android:id="@+id/disaster_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Volcanic"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="#9cffffff" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>